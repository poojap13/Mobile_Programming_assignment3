<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#C9DABF">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Let's plan your Breakfast meal!!"
        android:textStyle="bold"
        android:textColor="#5F6F65"
        android:textSize="18sp" />

    <!-- Spinner for meal options -->
    <Spinner
        android:id="@+id/meal_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_text"
        android:layout_marginTop="80dp"
        android:background="#9CA986"
        android:entries="@array/breakfast_options"
        android:padding="12dp"
        android:textColor="#5F6F65" />

    <!-- Date EditText -->
    <EditText
        android:id="@+id/date_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/meal_spinner"
        android:layout_marginTop="108dp"
        android:background="#808D7C"
        android:hint="Select Date"
        android:inputType="date"
        android:padding="12dp"
        android:textColor="#5F6F65" />

    <!-- Time EditText -->
    <EditText
        android:id="@+id/time_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_edit_text"
        android:layout_marginTop="116dp"
        android:background="#808D7C"
        android:hint="Select Time"
        android:inputType="time"
        android:padding="12dp"
        android:textColor="#5F6F65" />

    <!-- Save Meal Button -->
    <Button
        android:id="@+id/btnSaveMeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/time_edit_text"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="99dp"
        android:layout_marginEnd="154dp"
        android:background="#5F6F65"
        android:padding="12dp"
        android:text="Save Meal"
        android:textColor="#C9DABF" />
</RelativeLayout>
